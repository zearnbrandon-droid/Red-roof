<script>
const canvas = document.getElementById("game");
const ctx = canvas.getContext("2d");

const tile = 40;
const size = 10;

let player = { x: 1, y: 1 };
let granny = { x: 8, y: 8 };
let exitDoor = { x: 9, y: 0 };

let gameOver = false;

function drawSquare(x, y, color) {
  ctx.fillStyle = color;
  ctx.fillRect(x * tile, y * tile, tile, tile);
}

function draw() {
  ctx.clearRect(0, 0, canvas.width, canvas.height);

  drawSquare(exitDoor.x, exitDoor.y, "green"); // exit
  drawSquare(granny.x, granny.y, "red");       // granny
  drawSquare(player.x, player.y, "blue");      // player
}

function moveGranny() {
  const dx = player.x - granny.x;
  const dy = player.y - granny.y;

  if (Math.abs(dx) > Math.abs(dy)) {
    granny.x += Math.sign(dx);
  } else {
    granny.y += Math.sign(dy);
  }
}

function checkGame() {
  if (player.x === granny.x && player.y === granny.y) {
    document.getElementById("status").innerText = "ğŸ’€ Granny got you";
    gameOver = true;
  }

  if (player.x
