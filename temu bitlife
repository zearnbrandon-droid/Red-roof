  body {
    background: #111;
    color: white;
    font-family: monospace;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
  }

  #game {
    background: #1c1c1c;
    padding: 20px;
    width: 320px;
    text-align: center;
    border-radius: 10px;
  }

  h1 {
    margin-top: 0;
    color: #4da6ff;
  }

  #stats p {
    margin: 6px 0;
  }

  #event {
    margin: 15px 0;
    min-height: 45px;
  }

  button {
    background: #007bff;
    color: white;
    border: none;
    padding: 12px;
    width: 100%;
    font-size: 16px;
    cursor: pointer;
    border-radius: 6px;
  }

  button:hover {
    background: #0056b3;
  }

  button:disabled {
    background: gray;
    cursor: not-allowed;
  }

  #gameOver {
    color: red;
    font-weight: bold;
    margin-top: 10px;
  }
